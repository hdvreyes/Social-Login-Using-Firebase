# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Firebase Logins' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Firebase Logins
  # Pod for Firebase with UI #
  pod 'FirebaseUI'
  pod 'Firebase/Auth'
  pod 'FirebaseUI/Auth'
  pod 'FirebaseUI/Google'
  pod 'FirebaseUI/Facebook'
  pod 'FirebaseUI/Twitter'
  pod 'FirebaseUI/Phone'
  
  # Pods for Firebase no UI #
  pod 'GoogleSignIn'
  
  # Pods for Facebook SDK #
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'FacebookShare'

  # Pods for Twitter SDK #
  pod 'TwitterKit'
  
  target 'Firebase LoginsTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'Firebase LoginsUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
